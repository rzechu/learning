{
  "consumer": {
    "name": "Fulfilment API"
  },
  "interactions": [
    {
      "description": "a request for an payment by ID",
      "pending": false,
      "providerStates": [
        {
          "name": "an payment with ID {id} exists",
          "params": {
            "id": 1
          }
        }
      ],
      "request": {
        "headers": {
          "Accept": [
            "application/json"
          ]
        },
        "method": "GET",
        "path": "/api/payments/1"
      },
      "response": {
        "body": {
          "content": {
            "amount": 123,
            "cardNumber": "123 33 009",
            "currency": "USD",
            "method": "CreditCard",
            "paymentId": 1
          },
          "contentType": "application/json",
          "encoded": false
        },
        "headers": {
          "Content-Type": [
            "application/json"
          ]
        },
        "matchingRules": {
          "body": {
            "$.amount": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "decimal"
                }
              ]
            },
            "$.currency": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "regex",
                  "regex": "^[A-Z]{3}$"
                }
              ]
            },
            "$.paymentId": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "integer"
                }
              ]
            }
          }
        },
        "status": 200
      },
      "type": "Synchronous/HTTP"
    },
    {
      "description": "a request for an payment with an unknown ID",
      "pending": false,
      "request": {
        "headers": {
          "Accept": [
            "application/json"
          ]
        },
        "method": "GET",
        "path": "/api/payments/404"
      },
      "response": {
        "status": 404
      },
      "type": "Synchronous/HTTP"
    },
    {
      "description": "a request for an payment with bad values ",
      "pending": false,
      "request": {
        "headers": {
          "Accept": [
            "application/json"
          ]
        },
        "method": "POST",
        "path": "/api/payments"
      },
      "response": {
        "status": 400
      },
      "type": "Synchronous/HTTP"
    }
  ],
  "metadata": {
    "pactRust": {
      "ffi": "0.4.27",
      "models": "1.2.8"
    },
    "pactSpecification": {
      "version": "4.0"
    }
  },
  "provider": {
    "name": "Payments API"
  }
}